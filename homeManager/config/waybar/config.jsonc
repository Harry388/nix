{
    // General Waybar configuration
    "layer": "top",
    "position": "bottom",
    "height": 34,
    // Modules configuration
    "modules-left": [
        "custom/launcher",
        "hyprland/workspaces",
    ],
    "modules-right": [
        "battery",
        "backlight",
        "pulseaudio",
        "tray",
        "clock",
    ],
    "custom/launcher": {
        "format": "",
        "on-click": "ulauncher-toggle"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "󰃞\t{percent}%"
    },
    "battery": {
        "format": "󰁹\t{capacity}%",
        "format-charging": "󰂄\t{capacity}%"
    },
    "clock": {
        "format": "{:%I:%M %p}",
        "format-alt": "{:%a, %d. %b  %I:%M %p}"
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "on-click": "activate",
        "sort-by-number": true
    },
    "pulseaudio": {
        "format": " \t{volume}%",
        "format-bluetooth": "󰥰\t{volume}%",
        "format-muted": " ",
        "ignored-sinks": [
            "Easy Effects Sink"
        ],
        "on-click": "pavucontrol",
        "scroll-step": 1
    }
}
